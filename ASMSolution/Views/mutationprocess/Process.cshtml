@model ASM_UI.Models.AssetMutationViewModel

@{
    ViewBag.Title = "Asset Mutation Process";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">

                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-pencil-square-o"></i>
                Asset Mutation
                <span>
                    >
                    Process
                </span>
            </h1>
        </div>
    </div>

    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-togglebutton="false" data-widget-collapsed="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>
                            Asset Mutation Process
                        </h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            @using (Html.BeginForm("Process", "mutationprocess", FormMethod.Post, htmlAttributes: new { @class = "smart-form", enctype = "multipart/form-data" }))
                            {
                                <header>
                                    Asset Mutation Process View
                                </header>

                                <fieldset>
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <fieldset>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.request_code)</b>
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="input">
                                                        @Html.DisplayFor(model => model.request_code, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                    @Html.HiddenFor(model => model.mutation_id)
                                                    @Html.HiddenFor(model => model.request_id)
                                                    @Html.HiddenFor(model => model.asset_id)
                                                    @Html.ValidationMessageFor(model => model.request_id, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.asset_number)</b>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="input">
                                                        <a id="ahrefmodal" data-toggle="modal" href="#InfoAsset" onclick="OpenModalAsset(@Model.asset_id);">@Html.DisplayFor(model => model.asset_number)</a>
                                                        @Html.HiddenFor(model => model.asset_number)
                                                    </label>
                                                </div>
                                                <div class="col-md-3">
                                                    @*<img id="myImage" src="@Url.Content(string.Format("{0}{1}", Model.path_address, Model.asset_img_address))" width="150" />
                                                        <br /><label><i>*Focus on the image to Zoom</i></label>*@
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.asset_name)</b>
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.asset_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.asset_receipt_date)</b>
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.asset_receipt_date, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                        <br />
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.currency_code)</b>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.currency_code, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                    </label>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.current_location_id)</b>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @Html.EditorFor(model => model.location_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.asset_book_value)</b>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.asset_book_value, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align:right" } })
                                                    </label>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.current_department_id)</b>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @Html.EditorFor(model => model.department_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.currency_kurs)</b>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.currency_kurs, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align:right" } })
                                                    </label>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.current_employee_id)</b>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @Html.EditorFor(model => model.employee_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.asset_original_value)</b>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.asset_original_value, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align:right" } })
                                                    </label>
                                                </div>
                                            </div>
                                        </section>

                                    </fieldset>
                                    <fieldset>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                    Transfer To:
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.transfer_to_dept_id)</b>
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.transfer_to_dept_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        @Html.HiddenFor(model => model.transfer_to_dept_id)
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.transfer_to_location_id)</b>
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="input">
                                                        @*@Html.EditorFor(model => model.transfer_to_location_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })*@
                                                        @Html.EditorFor(model => model.transfer_to_location_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        @Html.HiddenFor(model => model.transfer_to_location_id)
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.transfer_to_emp_id)</b>
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.transfer_to_emp_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        @Html.HiddenFor(model => model.transfer_to_emp_id)
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                    </fieldset>
                                    <fieldset>
                                        <section>
                                            <header>
                                                <h2>
                                                    Asset Mutation Approval History
                                                </h2>
                                            </header>
                                            <div class="row">
                                                <br />
                                                <br />
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-10">
                                                    <div class="widget-body no-padding">
                                                        <table class="table table-striped table-bordered table-hover" width="100%" id="table_basic">
                                                            <thead>
                                                                <tr>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.approval_employee_name)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.approval_level_name)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.approval_status_Name)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.approval_date)
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            @foreach (var item in Model.mutation_Approval_list)
                                                            {
                                                                <tbody>
                                                                    <tr>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_employee_name)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_level_name)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_status_Name)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_date)
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            }
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                    </fieldset>
                                    <fieldset>
                                        <header>
                                            <h2>
                                                Asset Mutation Process Information
                                            </h2>
                                        </header>
                                        <section>
                                            <br />
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.LabelRequiredFor(model => model.fl_pic_asset_comfirm)</b>
                                                </div>
                                                <div class="col-md-2">
                                                    <span class="onoffswitch-title"></span> <span class="onoffswitch">
                                                        <input type="checkbox" name="fl_pic_asset_comfirm" class="onoffswitch-checkbox" id="chkfl_pic_asset_comfirm" value="true" @(Model.fl_pic_asset_comfirm.GetValueOrDefault() ? "checked=\"checked\"" : "") />
                                                        <label class="onoffswitch-label" for="chkfl_pic_asset_comfirm">
                                                            <span class="onoffswitch-inner" data-swchon-text="Yes" data-swchoff-text="No"></span>
                                                            <span class="onoffswitch-switch"></span>
                                                        </label>
                                                    </span>
                                                    @Html.ValidationMessageFor(model => model.fl_pic_asset_comfirm, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    &nbsp;<b>@Html.LabelRequiredFor(model => model.courier_id, htmlAttributes: new { @class = "control-label" })</b>
                                                </div>
                                                <div class="col-md-5">
                                                    @*<select id="locationID" name="location" placeholder="Select Location" style="width:100%" class="form-control select2"></select>*@
                                                    @Html.DropDownList("courier_id", null, "- Select Courier -", htmlAttributes: new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.courier_id, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </section>
                                    </fieldset>
                                </fieldset>
                                <footer>
                                    <div class="form-group">
                                        <div class="col-md-7">
                                            @Html.ActionLink("Close", "Index", "disposal", htmlAttributes: new { @class = "btn btn-default" })
                                            <input type="submit" value="Submit" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </footer>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
    <!-- Modal -->
    <div class="modal fade" id="InfoAsset" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false"></div>
</div>

@section pagespecific {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#chkfl_pic_asset_comfirm').change(function () {
                if (this.checked) {
                    //alert("checked");
                }
                else {
                    //alert("not checked");
                }
            });
        });

        function OpenModalAsset(id) {
            $("#InfoAsset").html("");
            $.ajax({
                url: "/modals/ModalInfoAsset/" + id,
                success: function (data) {
                    //alert("data");
                    $("#InfoAsset").html(data);
                },
                error: function (data) {
                    //console.log(data);
                    alert("Error!\n" + JSON.stringify(data));
                }
            });
        }
    </script>
}
