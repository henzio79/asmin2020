                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.request_description)</b>
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="input">
                                                        <textarea name="request_description" rows="5" class="form-control" readonly="readonly">@Model.request_description </textarea>
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                    </fieldset>
                                    <fieldset>
                                        <section>
                                            <header>
                                                <h2>
                                                    Disposal Approval History
                                                </h2>
                                            </header>
                                            <div class="row">
                                                <br />
                                                <br />
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-10">
                                                    <div class="widget-body no-padding">
                                                        <table class="table table-striped table-bordered table-hover" width="100%" id="table_basic">
                                                            <thead>
                                                                <tr>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.approval_employee_name)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.approval_level_name)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.approval_status_Name)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.approval_date)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.approval_suggestion_id)
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            @foreach (var item in Model.disposal_Approval_list)
                                                            {
                                                                <tbody>
                                                                    <tr>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_employee_name)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_level_name)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_status_Name)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_date)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_suggestion_name)
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            }
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                    </fieldset>
                                    @if (Model.announcement_upload_address != null)
                                    {
                                        <fieldset>
                                            <header>
                                                <h2>
                                                    Disposal Process Information
                                                </h2>
                                            </header>
                                            <section>
                                                <br />
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.announcement_upload_address)</b>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <input type="checkbox" name="fl_announcement_status" id="chk_announcement" disabled="disabled" value="true" @(Model.fl_announcement_status.GetValueOrDefault() ? "checked=\"checked\"" : "") />
                                                        <i></i> Berita Acara
                                                        <br />
                                                        <a data-toggle="modal" href="#pdfmodal" class="btn btn-success btn-sm" onclick="OpenModalPDF();">View Document</a>
                                                    </div>
                                                </div>
                                            </section>

                                            <section>
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.announcement_description)</b>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <label class="input">
                                                            <textarea name="announcement_description" rows="5" class="form-control" readonly="readonly">@Model.announcement_description </textarea>
                                                        </label>
                                                    </div>
                                                </div>
                                            </section>

                                        </fieldset>
                                    }
                                </fieldset>
                                <footer>
                                    <div class="form-group">
                                        <div class="col-md-7">
                                            @Html.ActionLink("Close", "Index", "disposalCSR", htmlAttributes: new { @class = "btn btn-default" })
                                        </div>
                                    </div>
                                </footer>
                                                                }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
    <!-- Modal -->
    <div class="modal fade" id="pdfmodal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    </div>

    <div class="modal fade" id="InfoAsset" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false"></div>
</div>

@section pagespecific {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myImage').width(100);
            $('#myImage').mouseover(function () {
                $(this).css("cursor", "pointer");
                $(this).animate({ width: "500px" }, 'slow');

            });
            $('#myImage').mouseout(function () {
                $(this).animate({ width: "150px" }, 'slow');
            });
        });

        function OpenModalPDF() {
            $("#pdfmodal").html("");
            var link = "@Url.Content(string.Format(@"{0}{1}", Model.path_address, Model.announcement_upload_address))"
            $.ajax({
                url: "/disposalProcess/ModalPDF/",
                success: function (data) {
                    $("#pdfmodal").html(data);
                    try {
                        $("#framePDF").attr("src", link);
                    }
                    catch (err) {
                        message.innerHTML = "Input is " + err + link;
                    }
                }

            });
        }

        function OpenModalAsset(id) {
            $("#InfoAsset").html("");
            $.ajax({
                url: "/modals/ModalInfoAsset/" + id,
                success: function (data) {
                    //alert("data");
                    $("#InfoAsset").html(data);
                },
                error: function (data) {
                    //console.log(data);
                    alert("Error!\n" + JSON.stringify(data));
                }
            });
        }
    </script>
}


