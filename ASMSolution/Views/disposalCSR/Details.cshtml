@model ASM_UI.Models.disposalViewModel

@{
    ViewBag.Title = "Disposal Process CSR";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">

                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-pencil-square-o"></i>
                Disposal
                <span>
                    >
                    Process
                </span>
            </h1>
        </div>
    </div>

    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-togglebutton="false" data-widget-collapsed="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>
                            Disposal Process
                        </h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            @using (Html.BeginForm("DisposalFollowup", "disposalCSR", FormMethod.Post, htmlAttributes: new { @class = "smart-form", enctype = "multipart/form-data" }))
                            {
                                <header>
                                    Disposal Process View
                                </header>

                                <fieldset>
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <fieldset>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.disposal_number)</b>
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="input">
                                                        @Html.DisplayFor(model => model.disposal_number, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                    @{var announcement_id = Model.announcement_id;}
                                                    @Html.HiddenFor(model => announcement_id)

                                                    @{var request_id = Model.request_id;}
                                                    @Html.HiddenFor(model => request_id)
                                                    @Html.ValidationMessageFor(model => model.request_id, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.asset_number)</b>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="input">
                                                        @*@{var asset_number = Model.asset_number;}
                                                        @Html.EditorFor(model => asset_number, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })*@
                                                        <a id="ahrefmodal" data-toggle="modal" href="#InfoAsset" onclick="OpenModalAsset(@Model.asset_id);">@Html.DisplayFor(model => model.asset_number)</a>
                                                    </label>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <img id="myImage" src="@Url.Content(string.Format("{0}{1}", Model.path_address, Model.asset_img_address))" width="150" />
                                                    <br /><label><i>*Focus on the image to Zoom</i></label>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.asset_name)</b>
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="input">
                                                        @{var asset_name = Model.asset_name;}
                                                        @Html.EditorFor(model => asset_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.asset_receipt_date)</b>
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.asset_receipt_date, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                        <br />
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.currency_code)</b>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.currency_code, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                    </label>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.location_id)</b>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @{var location_name = Model.location_name;}
                                                            @Html.EditorFor(model => location_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.asset_book_value)</b>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.asset_book_value, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align:right" } })
                                                    </label>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.department_id)</b>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @{var department_name = Model.department_name;}
                                                            @Html.EditorFor(model => department_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.Currency_kurs)</b>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.Currency_kurs, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align:right" } })
                                                    </label>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.employee_id)</b>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @Html.EditorFor(model => model.employee_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    <b>@Html.DisplayNameFor(model => model.asset_original_value)</b>
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.asset_original_value, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align:right" } })
                                                    </label>
                                                </div>
                                                <div class="col-md-1">
