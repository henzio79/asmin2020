
<script type="text/javascript">

    $('#ms_user_type').select2({
        placeholder: 'Select User Type',
        allowClear: true
    });

    $('#ms_job_level').select2({
        placeholder: 'Select Job Level',
        allowClear: true
    });

    $(document).ready(function () {
        var $loginForm = $("#user_right-form").validate({
            // Rules for form validation
            rules: {
                ms_user_type: {
                    required: true
                },
                ms_job_level: {
                    required: true,
                    number: true
                },
                ms_menu: {
                    required: true
                }
            },
            // Messages for form validation
            messages: {
                ms_user_type: {
                    required: 'Please User Type'
                },
                ms_job_level: {
                    required: 'Please Job Level'
                },
                ms_menu: {
                    required: 'Please select menu'
                }
            },

            // Do not change code below
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        });

    })
</script>

