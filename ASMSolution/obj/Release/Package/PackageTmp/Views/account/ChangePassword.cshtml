@model ASM_UI.Models.AccountChangePasswordViewModel

<div id="content" class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
            @if (ViewBag.ErrorMessage != null)
            {
                <label>@ViewBag.ErrorMessage</label>
            }
        </div>
    </div>

    <div class="row">

        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
            <div class="well no-padding">
                <form action="@Url.Action("ChangePassword", "Account")" method="POST" id="login-form" class="smart-form client-form">
                    <header>
                        Change Password
                    </header>
                    @Html.AntiForgeryToken()
                    @Html.ValidationBootstrap()
                    @Html.HiddenFor(m=>m.UserName)
                    @Html.HiddenFor(m => m.user_id)
                    <fieldset>
                        <section>
                            <label class="label">User Name</label>
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @readonly="true" } })
                            </label>
                        </section>

                        <section>
                            <label class="label">New Password</label>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input type="password" name="NewPassword">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter your new password</b>
                            </label>
                        </section>
                        <section>
                            <label class="label">Confirm Password</label>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input type="password" name="ConfirmPassword">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter your new password again</b>
                            </label>
                        </section>


                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-pencil"></i>
                            Change
                        </button>
                        @*<a href="@Url.Action("index", "account")"><button type="button" class="btn btn-default">Close</button></a>*@
                    </footer>
                </form>
            </div>

        </div>
    </div>
</div>
@section pagespecific{
    <script type="text/javascript">
        $(function () {
            // Validation
            $("#login-form").validate({
                // Rules for form validation
                rules: {
                    NewPassword: {
                        required: true
                    },
                    ConfirmPassword: {
                        required: true
                    },

                },

                // Messages for form validation
                messages: {
                    NewPassword: {
                        required: 'Please enter your new password'
                    },
                    ConfirmPassword: {
                        required: 'Please confirm your new password'
                    },
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        });
    </script>
}