@section pagespecific {
    <script type="text/javascript">

        $(document).ready(function () {
            $('#ReceiptDate').datepicker({
                dateFormat: 'dd-mm-yy',
                prevText: '<i class="fa fa-chevron-left"></i>',
                nextText: '<i class="fa fa-chevron-right"></i>',
            });
        });

        function GetAssetNumber(id) {
            $('#CancelBtn').prop('disabled', true);
            //document.getElementById("DeleteBtn").style.display = "inline";

            $.ajax({
                type: 'POST',
                url: "/asset_registration/GetAssetList/" + id,
                dataType: 'json',
                success: function (data) {
                    for (var i in data) {
                        $("#parent_asset_id").val(data[i].asset_id);
                        $("#parent_asset_number").val(data[i].asset_number);
                        $("#parent_asset_name").val(data[i].asset_name);
                        $("#parent_asset_name").css({ 'background-color': color_input_text });
                        $("#parent_asset_number").css({ 'background-color': color_input_text });
                        $("#company_id").select2("trigger", "select", {
                            data: { id: data[i].company_id }
                        });
                        //$("#company_id").select2("val",data[i].company_id);

        //bagaimana set value ddl yg ada class = "select2 " ?
                        //$("#company_id option[selected]").val(data[i].company_id).change();
                        //alert('company_id = ' + data[i].company_id);
                        //alert($("#company_id option").selected);
                        $("#asset_reg_location_id").select2("trigger", "select", {
                            data: { id: data[i].asset_reg_location_id }
                        });
                        //$("#asset_reg_location_id").select2("val", data[i].asset_reg_location_id);
                        $("#asset_reg_pic_id").select2("trigger", "select", {
                            data: { id: data[i].asset_reg_pic_id }
                        });
                        //$("#asset_reg_pic_id").select2("val", data[i].asset_reg_pic_id);
                        $("#category_id").select2("trigger", "select", {
                            data: { id: data[i].category_id }
                        });
                        //$("#category_id").val(data[i].category_id);
                        $("#location_id").select2("trigger", "select", {
                            data: { id: data[i].location_id }
                        });
                        //$("#location_id").val(data[i].location_id);
                        $("#department_id").select2("trigger", "select", {
                            data: { id: data[i].department_id }
                        });
                        //$("#department_id").val(data[i].department_id);
                        $("#employee_id").select2("trigger", "select", {
                            data: { id: data[i].employee_id }
                        });
                        //$("#employee_id").val(data[i].employee_id);

                    }
                },
                error: function (data) {
                    alert("error!");
                }
            })
            
        }


        function OpenModalAssetList() {
            $("#Asset").html("");
            var assetCode = $("#assetCodeID").val();
            //alert("modal");

            $.ajax({
                url: "/subasset_registration/ModalAsset/",
                success: function (data) {
                    $("#Asset").html(data);
                    //alert("open modal");
                    var oTable = $('#AssetTblList').DataTable({
                        "ajax": {
                            "url": "/asset_registration/GetAssetList/0",
                            "type": "GET",
                            "datatype": "json",
                        },
                        "columns": [
                            { "data": "asset_id", "autoWidth": true },
                            { "data": "asset_number", "autoWidth": true },
                            { "data": "asset_name", "autoWidth": true },
                            {
                                "data": "action",
                                "autowidth": true,
                                "mRender": function (data, type, full) {
                                    return '<a class="btn btn-info btn-sm" data-dismiss="modal" onclick="GetAssetNumber(' + full['asset_id'] + ');">' + 'Select' + '</a>';
                                }
                            }
                        ]
                    });
                }
            });
        }


    </script>
