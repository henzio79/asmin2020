@{ 
   ASM_UI.Models.USER_PROFILE UserProfile = (ASM_UI.Models.USER_PROFILE)System.Web.HttpContext.Current.Session["USER_PROFILE"];
}
<div class="login-info">
    <span id="activity" class="activity-dropdown">
        <!-- <a href="javascript:void(0);" id="activity" class="activity-dropdown"> -->
        <a href="#" id="activity" class="activity-dropdown">
            <img src="~/content/img/avatars/sunny.png" alt="me" class="online" />
            <span>@UserProfile.UserName</span>
            <i class="fa fa-angle-down"></i>
        </a>
    </span>
    <!-- AJAX-DROPDOWN : control this dropdown height, look and feel from the LESS variable file -->
    <div class="ajax-dropdown">

        <!-- the ID links are fetched via AJAX to the ajax container "ajax-notifications" -->

        <div class="btn-group btn-group-justified">
            <label class="btn btn-default">
                Your Login Information
            </label>
            <a href="@Url.Action("changepassword", "account")" class="btn btn-default btn-primary" target="_self">Change Password</a>
        </div>

        @*<div class="btn btn-group-sm"">
            <button class="btn btn-group-sm">
                <a href="@Url.Action("changepassword", "account")">Change Password</a>
            </button>
        </div>*@

        <!-- notification content -->
        <div class="ajax-notifications custom-scroll">
            <div class="alert alert-transparent table-responsive">
                @*<h4>Your Login Info</h4>*@
                @*<p>User ID : @UserProfile.UserId; </p>
                    <p>User Name : @UserProfile.UserName; </p>
                    <p>User Full Name : @UserProfile.UserFullName; </p>
                    <p>Company Name : @UserProfile.CompanyName; </p>
                    <p>Dept Name : @UserProfile.DeptName; </p>
                    <p>Org ID : @UserProfile.OrgId; </p>
                    <p>Employee ID : @UserProfile.employee_id; </p>
                    <p>Employee Name : @UserProfile.Employee; </p>*@
                <table class="table table-sm">
                    <tbody>
                        @if (UserProfile.UserId > 0)
                        {
                            <tr>
                                <th scope="row">Login Id</th>
                                <td>@UserProfile.UserId</td>
                            </tr>
                        }

                        @if (!string.IsNullOrWhiteSpace(UserProfile.UserName))
                        {
                            <tr>
                                <th scope="row">Login Name</th>
                                <td>@UserProfile.UserName</td>
                            </tr>
                        }


                        @*if (!String.IsNullOrWhiteSpace(UserProfile.UserFullName))
                            {
                                <tr>
                                    <th scope="row">Full Name</th>
                                    <td>@UserProfile.UserFullName.ToUpper()</td>
                                </tr>
                            }*@

                        @if (UserProfile.ms_user_type != null)
                        {
                            <tr>
                                <th scope="row">User Type</th>
                                <td>
                                    @UserProfile.ms_user_type.user_type_name
                                </td>
                            </tr>
                        }

                        @if (UserProfile.ms_job_level != null)
                        {
                            <tr>
                                <th scope="row">Job Level</th>
                                <td>
                                    @UserProfile.ms_job_level.job_level_name
                                </td>
                            </tr>
                        }

                        @if (!String.IsNullOrWhiteSpace(UserProfile.CompanyName))
                        {
                            <tr>
                                <th scope="row">Company</th>
                                <td>@UserProfile.CompanyName.ToUpper()</td>
                            </tr>
                        }

                        @if (UserProfile.register_location != null)
                        {
                            <tr>
                                <th scope="row">District</th>
                                <td>@UserProfile.register_location.asset_reg_location_name.ToUpper()</td>
                            </tr>
                        }

                        @if (UserProfile.location_id != null)
                        {
                            <tr>
                                <th scope="row">Location</th>
                                <td>@UserProfile.location_name.ToUpper()</td>
                            </tr>
                        }
                        @if (UserProfile.ms_department != null)
                        {
                            <tr>
                                <th scope="row">Department</th>
                                <td>
                                    @UserProfile.ms_department.department_name
                                </td>
                            </tr>
                        }


                        @if (@UserProfile.ms_employee != null)
                        {
                            <tr>
                                <th scope="row">Employee NIK</th>
                                <td>
                                    @UserProfile.ms_employee.employee_nik
                                </td>
                            </tr>

                            <tr>
                                <th scope="row">Employee Name</th>
                                <td>
                                    @UserProfile.ms_employee.employee_name.ToUpper()
                                </td>
                            </tr>

                            <tr>
                                <th scope="row">Employee Email</th>
                                <td>
                                    @UserProfile.ms_employee.employee_email
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <!-- end notification content -->
        <!-- footer: refresh area -->
        <span>
            Last updated on: 12-07-2019 9:43AM
            <button type="button" data-loading-text="<i class='fa fa-refresh fa-spin'></i> Loading..." class="btn btn-xs btn-default pull-right">
                <i class="fa fa-refresh"></i>
            </button>
        </span>
        <!-- end footer -->

    </div>
    <!-- END AJAX-DROPDOWN -->
</div>