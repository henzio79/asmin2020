<script type="text/javascript">

    $(document).ready(function () {
        
        var $insuranceForm = $("#insurance-form").validate({
                // Rules for form validation
                rules: {
                    insuranceCode: {
                        required: true,
                    },
                    insuranceName: {
                        required: true
                    },
                    insuranceAddress: {
                        required: true
                    },
                    //insurancePhone: {
                    //    required: true,
                    //    number: true
                    //},
                    //insuranceMail: {
                    //    required: true,
                    //    email: true
                    //},
                    //insuranceCPName: {
                    //    required: true
                    //},
                    //insuranceCPPhone: {
                    //    required: true
                    //},
                    //insuranceCPName: {
                    //    required: true
                    //},
                    //insuranceDescription: {
                    //    required: true
                    //}
                },

                // Messages for form validation
                messages: {
                    insuranceCode: {
                        required: 'Please enter Code'
                    },
                    insuranceName: {
                        required: 'Please enter Name'
                    },
                    insuranceAddress: {
                        required: 'Please enter Address'
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
        });
        $("#ButtonAction").on("click", function (e) {
            e.preventDefault();
            if ($("#insurance-form").valid())
            {
                $.ajax({
                    url: "/insurance/SaveData",
                    type: "post",
                    data: $("#insurance-form").serialize(),
                    success: function (data) {
                        if (data == "Insert") {
                            swal({
                                title: "Success",
                                text: "Success Insert Insurance Company",
                                type: "success"
                            }).then(function () {
                                $("#Insurance").modal("hide");
                            });
                            setTimeout(function () {
                                location.reload();
                            }, 1000);
                        }
                        else if (data == "Update") {
                            swal({
                                title: "Updated",
                                text: "Success Update Insurance Company",
                                type: "success"
                            }).then(function () {
                                $("#Insurance").modal("hide");
                            });
                            setTimeout(function () {
                                location.reload();
                            }, 1000);
                        }
                        else if (data == "Delete") {
                            swal({
                                title: "Updated",
                                text: "Success Delete Insurance Company",
                                type: "success"
                            }).then(function () {
                                $("#Insurance").modal("hide");
                            });
                            setTimeout(function () {
                                location.reload();
                            }, 1000);
                        }
                        else if (data == "Session") {
                            swal({
                                title: "Session Expired",
                                text: "Your Session Expired, Please Re-login",
                                type: "warning"
                            }).then(function () {
                                $('#jqgrid').trigger('reloadGrid');
                                location.reload();
                            });
                        }
                        else if (data == "Error") {
                            swal({
                                title: "Error",
                                text: "Error On Action, Please Try Again",
                                type: "error"
                            }).then(function () {
                                $('#jqgrid').trigger('reloadGrid');
                                location.reload();
                            });
                        }
                    }
                });
            }
            else {
                swal({
                    title: "Validation Error",
                    text: "Please check your input data...",
                    type: "warning"
                });
                var validator = $("#insurance-form").validate();
                validator.form();
            }
           
        });


    })
</script>

