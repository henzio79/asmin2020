                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.Item1.Currency_kurs)</b>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.Currency_kurs, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>
