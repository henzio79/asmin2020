                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-10">
                                                    <div class="widget-body no-padding">
                                                        <label><b>Disposal Approval Progress</b></label>
                                                        <table class="table table-striped table-bordered table-hover" width="100%" id="table_basic">
                                                            <thead>
                                                                <tr>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.Item1.approval_employee_name)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.Item1.approval_level_name)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.Item1.approval_status_Name)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.Item1.approval_date)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => model.Item1.approval_suggestion_id)
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            @foreach (var item in Model.Item2)
                                                            {
                                                                <tbody>
                                                                    <tr>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_employee_name)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_level_name)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_status_Name)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_date)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.approval_suggestion_name)
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            }
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                    </fieldset>

                                <footer>
                                    <div class="form-group">
                                        <div class="col-md-7">
                                            @Html.ActionLink("Close", "Index", "disposal", htmlAttributes: new { @class = "btn btn-default" })
                                        </div>
                                    </div>
                                </footer>
                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
    <!-- Modal -->
    <div class="modal hide fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <div>IMAGE</div>
            </div>
            <div class="modal-body">
                @*<img src="@Url.Content(string.Format("{0}{1}", Model.Item3, Model.Item1.asset_img_address))" width="500" />*@
            </div>
            <div class="modal-footer">
                <a data-dismiss="modal" class="close">Close</a>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="InfoAsset" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false"></div>
</div>

@section pagespecific {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myImage').width(250);
            $('#myImage').mouseover(function () {
                $(this).css("cursor", "pointer");
                $(this).animate({ width: "400px" }, 'slow');

            });
            $('#myImage').mouseout(function () {
                $(this).animate({ width: "250px" }, 'slow');
            });
        });
        function OpenModalAsset(id) {
            $("#InfoAsset").html("");
            $.ajax({
                url: "/modals/ModalInfoAsset/" + id,
                success: function (data) {
                    //alert("data");
                    $("#InfoAsset").html(data);
                },
                error: function (data) {
                    //console.log(data);
                    alert("Error!\n" + JSON.stringify(data));
                }
            });
        }
    </script>
}