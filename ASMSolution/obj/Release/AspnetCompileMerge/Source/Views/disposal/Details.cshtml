                                                        <b>@Html.DisplayNameFor(model => model.Item1.disposal_number)</b>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.disposal_number, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.Item1.asset_number)</b>
                                                    </div>
                                                    <div class="col-lg-2">
                                                        <label class="input">
                                                            <a id="ahrefmodal" data-toggle="modal" href="#InfoAsset" onclick="OpenModalAsset(@Model.Item1.asset_id);">@Html.DisplayFor(model => model.Item1.asset_number)</a>
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.Item1.currency_code)</b>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.currency_code, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.Item1.location_id)</b>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.location_name, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.Item1.asset_name)</b>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.asset_name, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.Item1.asset_receipt_date)</b>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.asset_receipt_date, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
