                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            @using (Html.BeginForm("Details", "disposal", FormMethod.Post, htmlAttributes: new { @class = "smart-form", enctype = "multipart/form-data" }))
                            {
                                <header>
                                    Disposal Request Approval View
                                </header>

                                <fieldset>
                                    <div class="row" style="padding-left:50px;">
                                        <div class="col-md-8">
                                            <section>
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
