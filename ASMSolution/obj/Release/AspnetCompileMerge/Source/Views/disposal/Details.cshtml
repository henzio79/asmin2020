@model Tuple<ASM_UI.Models.disposalViewModel, IEnumerable<ASM_UI.Models.disposalViewModel>, string>

@{
    ViewBag.Title = "Disposal Request Approval View";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">

                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-pencil-square-o"></i>
                Disposal
                <span>
                    >
                    Request Approval View
                </span>
            </h1>
        </div>
    </div>

    <section id="widget-grid" class="">
