                }
            });
            return _result;
        }

        function Calc_GetKurs() {
            var aDate = $("#elips_date").val();            
            var aCurr = $("#currencyID").val();
            var aPrice = parseInt($('#priceID').val().replace(/,/g, ''));

            if ((aDate) && (aCurr > 0)) {

                var rest_0 = getKurs(aDate, $("#currencyID").val(), 0);
                //alert('rest-0 : ' + rest_0);
                if (rest_0 > 0)
                    $("#kursID").val(rest_0);
                else
                    alert('Kurs [' + $('#currencyID').select2('data')[0].text + '] Not Found.\n\n.');

                var rest_1 = getKurs(aDate, $("#currencyID").val(), 1);
                //alert('rest-1 : ' + rest_1);
                if (rest_1)
                    $("#IDRkursID").val(rest_1);
                else
                    alert('Kurs [' + $('#currencyID').select2('data')[0].text + '] Not Found.\n\n.');

                var _value = 0;
                if (parseInt(rest_0) <= 0) { _value = 0; }
                else if (rest_0 >= 1) {
                    _value = parseInt(aPrice) / parseInt(rest_0);
                }
                else {
                    _value = parseInt(aPrice) * parseInt(rest_0);
                }
                $("#assetvalueUSDID").val(_value);
            }
            return true;
        }

