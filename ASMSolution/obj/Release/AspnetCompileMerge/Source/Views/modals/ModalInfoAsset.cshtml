@model Tuple<ASM_UI.Models.asset_registrationViewModel, List<ASM_UI.Models.subasset_registrationViewModel>, string>
@{
    ViewBag.Title = "Asset Information";
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;
            </button>
            <h4 class="modal-title">
                <b>Asset Information</b>
            </h4>
        </div>
        <div class="modal-body">
            <fieldset>
                <legend><b>Asset Information</b></legend>
                <section>
                    <div class="row">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-8">
                            <b>Image</b>
                            <br />
                            <img src="@Url.Content(string.Format("{0}{1}", Model.Item3, Model.Item1.tr_asset_images.asset_img_address))" width="250" alt="" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.asset_number)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.asset_number, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                    <br />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.asset_name)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.asset_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.asset_merk)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.asset_merk, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>

                            <br />
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.asset_serial_number)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.asset_serial_number, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.company_id)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.company.company_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.asset_reg_pic_id)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.asset_reg_pic.asset_reg_pic_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.asset_po_number)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.asset_po_number, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.asset_do_number)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.asset_do_number, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.asset_receipt_date)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.asset_receipt_date, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.category_id)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.asset_category.category_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.vendor_id)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.vendor.vendor_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </fieldset>
            <br />
            <fieldset>
                <legend><b>Asset Location</b></legend>
                <section>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.location_id)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.asset_location.location_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.department_id)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.department.department_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                </div>
                                <div class="col-md-5">
                                    <b>@Html.DisplayNameFor(model => model.Item1.employee_id)</b>
                                </div>
                                <div class="col-md-6">
                                    <label class="input">
                                        @Html.DisplayFor(model => model.Item1.employee.employee_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </fieldset>
            <fieldset>
                    <legend><b>@Html.DisplayFor(model => model.Item2.FirstOrDefault().asset_type.asset_type_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })</b></legend>
                <section>
                    <div class="row" style="padding-left:30px;">
                        <div class="col-md-11">
                            <table class="table table-striped table-bordered table-hover table-responsive" width="100%" id="table_basic">
                                <thead>
                                    <tr>
                                        <th>
                                            Asset Number
                                        </th>
                                        <th>
                                            Asset Name
                                        </th>
                                        <th>
                                            Asset Receipt Date
                                        </th>
                                        <th>
                                            Vendor
                                        </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.Item2)
                                {
                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.asset_number)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.asset_name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.asset_receipt_date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.vendor.vendor_name)
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </section>
            </fieldset>
        </div>
        <div class="modal-footer">
            <div class="form-group">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
