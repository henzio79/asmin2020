                                        @Html.HiddenFor(model => model.asset_reg_pic_id)
                                        @Html.HiddenFor(model => model.category_id)
                                        @Html.HiddenFor(model => model.location_id)
                                        @Html.HiddenFor(model => model.department_id)
                                        @Html.HiddenFor(model => model.employee_id)*@
