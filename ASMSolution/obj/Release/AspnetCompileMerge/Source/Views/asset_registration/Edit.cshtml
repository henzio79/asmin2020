                                                    </label>
                                                </div>
                                            </div>
                                        </section>

                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    @Html.LabelFor(model => model.company_id, htmlAttributes: new { @class = "control-label" })
                                                </div>
                                                <div class="col-md-8">
