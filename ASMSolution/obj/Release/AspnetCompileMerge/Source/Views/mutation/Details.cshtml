@model Tuple<ASM_UI.Models.AssetMutationViewModel, IEnumerable<ASM_UI.Models.AssetMutationViewModel>>

@{
    ViewBag.Title = "Mutation Request Approval Request";
}
<div id="content">
    <!-- row -->
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">

                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-pencil-square-o"></i>
                Mutation
                <span>
                    >
                    Request Asset Mutation  
                </span>
            </h1>
        </div>
    </div>
    <div class="body-content">
        <section id="widget-grid" class="">
            <div class="row">
                <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                    <div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-togglebutton="false" data-widget-collapsed="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                            <h2>Asset Mutation Request Approval View</h2>

                        </header>
                        <div>
                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box -->

                            </div>
                            <div class="widget-body no-padding">
                                @using (Html.BeginForm("Create", "mutation", FormMethod.Post, htmlAttributes: new { @class = "smart-form", enctype = "multipart/form-data" }))
                                {
                                @*<form id="mutation-form" class="smart-form">*@
                                    <header>
                                        @*<label class="input">
                                            <input type="hidden" name="asset_id" id="assetID" placeholder="Asset ID">
                                        </label>
                                        <label class="input">
                                            <input type="hidden" name="mode" id="modeID" placeholder="Must not be viewed">
                                        </label>*@
                                    </header>
                                    <fieldset>
                                        <fieldset title="Asset Parent">
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <section>
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        <b>@Html.DisplayNameFor(model => model.Item1.request_code)</b>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.request_code, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>
                                                </div>
                                            </section>
                                            <section>
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        @Html.DisplayNameFor(model => model.Item1.asset_number)
                                                    </div>
                                                    <div class="col-lg-3">
                                                        <label class="input">
                                                            <a id="ahrefmodal" data-toggle="modal" href="#InfoAsset" onclick="OpenModalAsset(@Model.Item1.asset_id);">@Html.DisplayFor(model => model.Item1.asset_number)</a>
                                                        </label>
                                                    </div>
                                                    <div class="col-lg-3">
                                                        
                                                    </div>
                                                </div>
                                            </section>
                                            <section>
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        @Html.DisplayNameFor(model => model.Item1.asset_name)
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.asset_name, new { htmlAttributes = new { @class = "form-control"} })
                                                        </label>
                                                    </div>
                                                </div>
                                            </section>
                                            <section>
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        @Html.DisplayNameFor(model => model.Item1.asset_receipt_date)
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.asset_receipt_date, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>
                                                </div>
                                            </section>
                                        </fieldset>
                                        <fieldset title="Asset Value & Location">
                                            <section>
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        @Html.DisplayNameFor(model => model.Item1.currency_code)
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.currency_code, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>

                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                    </div>
                                                    <div class="col-md-2">
                                                        &nbsp;@Html.DisplayNameFor(model => model.Item1.current_location_id)
                                                    </div>

                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.location_name, new { htmlAttributes = new { @class = "form-control"} })
                                                        </label>
                                                    </div>

                                                </div>
                                            </section>

                                            <section>
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        @Html.DisplayNameFor(model => model.Item1.asset_original_value)
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.asset_original_value, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>

                                                    <div class="col-md-1">
                                                        &nbsp;@Html.DisplayNameFor(model => model.Item1.currency_kurs)
                                                    </div>

                                                    <div class="col-md-2">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.currency_kurs, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>

                                                    <div class="col-md-2">
                                                        &nbsp;@Html.DisplayNameFor(model => model.Item1.current_department_id)
                                                    </div>

                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.department_name, new { htmlAttributes = new { @class = "form-control"} })
                                                        </label>
                                                    </div>
                                                </div>
                                            </section>

                                            <section>
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        @Html.DisplayNameFor(model => model.Item1.asset_book_value)
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.asset_book_value, new { htmlAttributes = new { @class = "form-control" } })
                                                        </label>
                                                    </div>

                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-2">
                                                    </div>

                                                    <div class="col-md-2">
                                                        &nbsp;@Html.DisplayNameFor(model => model.Item1.current_employee_id)
                                                    </div>

                                                    <div class="col-md-3">
                                                        <label class="input">
                                                            @Html.DisplayFor(model => model.Item1.employee_name, new { htmlAttributes = new { @class = "form-control"} })
                                                        </label>
                                                    </div>
                                                </div>
                                            </section>
                                        </fieldset>

                                        <fieldset title="Asset Transfer">
                                            <section>
                                                <div class="row">
                                                    <hr class="Bold" />
                                                    <h4> Transfer To:</h4>
                                                </div>
                                            </section>
                                            <section>
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        &nbsp;@Html.DisplayNameFor(model => model.Item1.transfer_to_location_id)
                                                    </div>
                                                    <div class="col-md-5">
                                                        @*@Html.DropDownList("transfer_to_location_id", null, "- Select Location -", htmlAttributes: new { @class = "form-control select2", @disabled = "disabled" })*@
                                                        @Html.DisplayFor(model => model.Item1.transfer_to_location_name, new { htmlAttributes = new { @class = "form-control" } })
                                                    </div>
                                                </div>
                                            </section>
                                            <section>
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        &nbsp;@Html.DisplayNameFor(model => model.Item1.transfer_to_dept_id)
                                                    </div>
                                                    <div class="col-md-5">
                                                        @*<select id="departmentID" name="department" placeholder="Select Department" style="width:100%" class="form-control select2"></select>*@
                                                        @*@Html.DropDownList("transfer_to_dept_id", null, "- Select Department -", htmlAttributes: new { @class = "form-control select2", @disabled = "disabled" })*@
                                                        @Html.DisplayFor(model => model.Item1.transfer_to_dept_name, new { htmlAttributes = new { @class = "form-control" } })
                                                    </div>
                                                </div>
                                            </section>
                                            <section>
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        &nbsp;@Html.DisplayNameFor(model => model.Item1.transfer_to_emp_id)
                                                    </div>
                                                    <div class="col-md-5">
                                                        @*<select id="employeeID" name="employee" placeholder="Select Employee" style="width:100%" class="form-control select2"></select>*@
                                                        @*@Html.DropDownList("transfer_to_emp_id", null, "- Select Employee -", htmlAttributes: new { @class = "form-control select2", @disabled = "disabled" })*@
                                                        @Html.DisplayFor(model => model.Item1.transfer_to_emp_name, new { htmlAttributes = new { @class = "form-control" } })
                                                    </div>
                                                </div>
                                            </section>
                                        </fieldset>
                                        
                                        <fieldset title="Table Approval">
                                            <section>
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-10">
                                                        <div class="widget-body no-padding">
                                                            <label><b>Asset Mutation Approval Progress</b></label>
                                                            <table class="table table-striped table-bordered table-hover" width="100%" id="table_basic">
                                                                <thead>
                                                                    <tr>
                                                                        <th>
                                                                            @Html.DisplayNameFor(model => model.Item1.approval_employee_name)
                                                                        </th>
                                                                        <th>
                                                                            @Html.DisplayNameFor(model => model.Item1.approval_level_name)
                                                                        </th>
                                                                        <th>
                                                                            @Html.DisplayNameFor(model => model.Item1.approval_status_Name)
                                                                        </th>
                                                                        <th>
                                                                            @Html.DisplayNameFor(model => model.Item1.approval_date)
                                                                        </th>
                                                                    </tr>
                                                                </thead>
                                                                @foreach (var item in Model.Item2)
                                                                {
                                                                    <tbody>
                                                                        <tr>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.approval_employee_name)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.approval_level_name)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.approval_status_Name)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.approval_date)
                                                                            </td>
                                                                        </tr>
                                                                    </tbody>
                                                                }
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </section>
                                        </fieldset>
                                        
                                    </fieldset>
                                    <footer>
                                        <div class="form-group">
                                            <div class="col-md-7">
                                                @Html.ActionLink("Close", "Index", "mutation", htmlAttributes: new { @class = "btn btn-default" })
                                            </div>
                                        </div>
                                    </footer>
                                @*</form>*@
                                }
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>
        <!-- Modal -->
        <div class="modal fade" id="InfoAsset" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false"></div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="Asset" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">

    </div>
    <!-- /.modal -->
    <!-- end widget grid -->

</div>

@section pagespecific {
    <script type="text/javascript">
        function OpenModalAsset(id) {
            $("#InfoAsset").html("");
            $.ajax({
                url: "/modals/ModalInfoAsset/" + id,
                success: function (data) {
                    //alert("data");
                    $("#InfoAsset").html(data);
                },
                error: function (data) {
                    //console.log(data);
                    alert("Error!\n" + JSON.stringify(data));
                }
            });
        }
    </script>
}