@model ASM_UI.Models.asset_licenseViewModel
@{
    ViewBag.Title = "Edit Asset License";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">

                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-pencil-square-o"></i>
                Registration
                <span>
                    >
                    Edit License Asset
                </span>
            </h1>
        </div>
    </div>

    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-togglebutton="false" data-widget-collapsed="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>License Asset </h2>

                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            @using (Html.BeginForm("Edit", "asset_license", FormMethod.Post, htmlAttributes: new { @class = "smart-form", enctype = "multipart/form-data" }))
                            {
                                <header>
                                    Edit license Asset
                                </header>
                                <fieldset>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-1">
                                            </div>
                                            <div class="col-md-10">
                                                <div class="widget-body no-padding">
                                                    <table class="table table-striped table-bordered table-hover" width="100%" id="table_basic">
                                                        <thead>
                                                            <tr>
                                                                <th>
                                                                    @Html.DisplayNameFor(model => model.license_number)
                                                                </th>
                                                                <th>
                                                                    @Html.DisplayNameFor(model => model.license_name)
                                                                </th>
                                                                <th>
                                                                    @Html.DisplayNameFor(model => model.license_issued_by)
                                                                </th>
                                                                <th>
                                                                    @Html.DisplayNameFor(model => model.license_date)
                                                                </th>
                                                                <th>
                                                                    @Html.DisplayNameFor(model => model.license_exp_date)
                                                                </th>
                                                                <th>
                                                                    @Html.DisplayNameFor(model => model.license_description)
                                                                </th>
                                                                <th></th>
                                                            </tr>
                                                        </thead>
                                                        @foreach (var item in Model.asset_license_list)
                                                        {
                                                            <tbody>
                                                                <tr>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.license_number)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.license_name)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.license_issued_by)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.license_date)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.license_exp_date)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.license_description)
                                                                    </td>
                                                                    <td>
                                                                        @Html.ActionLink("Edit", "Edit", new { id = Model.asset_parent_id, idw = item.license_id }) |
                                                                        @Html.ActionLink("Delete", "DeleteItem", new { id = item.license_id }, new { onclick = "return confirm('Are you sure you wish to delete this data?');" })
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        }
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </fieldset>
                                <fieldset>
                                    @Html.AntiForgeryToken()
                                    <br />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <section>
                                        <div class="row">
                                            <div class="col-md-1">
                                            </div>
                                            <div class="col-md-2">
                                                @Html.LabelRequiredFor(model => model.asset_number, htmlAttributes: new { @class = "control-label" })
                                            </div>
                                            @Html.HiddenFor(model => model.asset_parent_id, htmlAttributes: new { @id = "parent_asset_id" })
                                            @Html.ValidationMessageFor(model => model.asset_parent_id, "", new { @class = "text-danger" })

                                            @Html.HiddenFor(model => model.license_id)
                                            @Html.ValidationMessageFor(model => model.license_id, "", new { @class = "text-danger" })
                                            <div class="col-md-8">
                                                <label class="input">
                                                    @Html.EditorFor(model => model.asset_parent.asset_number, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                                </label>
                                            </div>
                                        </div>
                                    </section>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-1">
                                            </div>
                                            <div class="col-md-2">
                                                @Html.LabelFor(model => model.asset_name, htmlAttributes: new { @class = "control-label" })
                                            </div>
                                            <div class="col-md-8">
                                                <label class="input">
                                                    @Html.EditorFor(model => model.asset_parent.asset_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                                </label>
                                            </div>
                                        </div>
                                    </section>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-1">
                                            </div>
                                            <div class="col-md-2">
                                                @Html.LabelFor(model => model.vendor_name, htmlAttributes: new { @class = "control-label" })
                                            </div>
                                            <div class="col-md-8">
                                                <label class="input">
                                                    @Html.EditorFor(model => model.vendor_name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", placeholder = "Auto" } })
                                                </label>
                                            </div>
                                        </div>
                                    </section>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-1">
                                            </div>
                                            <div class="col-md-2">
                                                @Html.LabelRequiredFor(model => model.license_number, htmlAttributes: new { @class = "control-label" })
                                            </div>
                                            <div class="col-md-8">
                                                <label class="input">
                                                    @Html.EditorFor(model => model.license_number, new { htmlAttributes = new { @class = "form-control", id = "lbllicense_number" } })
                                                    @Html.ValidationMessageFor(model => model.license_number, "", new { @class = "text-danger" })
                                                </label>
                                            </div>
                                        </div>
                                    </section>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-1">
                                            </div>
                                            <div class="col-md-2">
                                                @Html.LabelRequiredFor(model => model.license_name, htmlAttributes: new { @class = "control-label" })
                                            </div>
                                            <div class="col-md-8">
                                                <label class="input">
                                                    @Html.EditorFor(model => model.license_name, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => Model.license_name, "", new { @class = "text-danger" })
                                                </label>
                                            </div>
                                        </div>
                                    </section>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-1">
                                            </div>
                                            <div class="col-md-2">
                                                @Html.LabelRequiredFor(model => model.license_issued_by, htmlAttributes: new { @class = "control-label" })
                                            </div>
                                            <div class="col-md-8">
                                                <label class="input">
                                                    @Html.EditorFor(model => model.license_issued_by, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.license_issued_by, "", new { @class = "text-danger" })
                                                </label>
                                            </div>
                                        </div>
                                    </section>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-1">
                                            </div>
                                            <div class="col-md-2">
                                                @Html.LabelRequiredFor(model => model.license_date, htmlAttributes: new { @class = "control-label" })
                                            </div>
                                            <div class="col-md-2">
                                                <label class="input">
                                                    @{var license_date = string.Format("{0:dd-MM-yyyy}", Model.license_date); }
                                                    @Html.EditorFor(model => license_date, new { htmlAttributes = new { @class = "form-control", id = "license_date" } })
                                                    @Html.ValidationMessageFor(model => model.license_date, "", new { @class = "text-danger" })
                                                </label>
                                            </div>
                                        </div>
                                    </section>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-1">
                                            </div>
                                            <div class="col-md-2">
                                                @Html.LabelRequiredFor(model => model.license_exp_date, htmlAttributes: new { @class = "control-label" })
                                            </div>
                                            <div class="col-md-2">
                                                <label class="input">
                                                    @{var license_exp_date = string.Format("{0:dd-MM-yyyy}", Model.license_exp_date); }
                                                    @Html.EditorFor(model => license_exp_date, new { htmlAttributes = new { @class = "form-control", id = "license_exp_date" } })
                                                    @Html.ValidationMessageFor(model => model.license_exp_date, "", new { @class = "text-danger" })
                                                </label>
                                            </div>
                                        </div>
                                    </section>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-1">
                                            </div>
                                            <div class="col-md-2">
                                                @Html.LabelFor(model => model.license_description, htmlAttributes: new { @class = "control-label" })
                                            </div>
                                            <div class="col-md-8">
                                                <label class="input">
                                                    <textarea name="license_description" rows="5" class="form-control" placeholder="Description or specification">@Model.license_description </textarea>
                                                    @Html.ValidationMessageFor(model => model.license_description, "", new { @class = "text-danger" })
                                                </label>
                                            </div>
                                        </div>
                                    </section>
                                </fieldset>
                                <footer>
                                    <div class="form-group">
                                        <div class="col-md-7">
                                            @Html.ActionLink("Cancel", "Index", "asset_license", htmlAttributes: new { @class = "btn btn-default" })
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </footer>
                                                        }
                        </div>
                    </div>
                </div>
            </article>

        </div>
    </section>
</div>

@section pagespecific {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#license_date').datepicker({
                dateFormat: 'dd-mm-yy',
                prevText: '<i class="fa fa-chevron-left"></i>',
                nextText: '<i class="fa fa-chevron-right"></i>',
                changeMonth: true,
                changeYear: true
            });
        });
        $(document).ready(function () {
            $('#license_exp_date').datepicker({
                dateFormat: 'dd-mm-yy',
                prevText: '<i class="fa fa-chevron-left"></i>',
                nextText: '<i class="fa fa-chevron-right"></i>',
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
}
